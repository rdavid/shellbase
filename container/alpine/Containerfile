FROM alpine:3.17.3
LABEL maintainer=David\ Rabkin\ <david@rabkin.co.il>
ENV \
	TIME_ZONE=Asia/Jerusalem \
	USER=shellbase
COPY LICENSE /licenses/LICENSE
WORKDIR /bin
COPY --from=ghcr.io/rdavid/goredoer:v0.9.20230308 /go/goredo .
RUN \
	apk add --no-cache --update \
		bash~=5.2 \
		curl~=7.88 \
		dash~=0.5 \
		fish~=3.5 \
		loksh~=7.2 \
		tcsh~=6.24 \
		tzdata~=2023 \
		zsh~=5.9 \
		util-linux~=2 \
		yash~=2.53 \
		&& rm -rf /var/cache/apk/* \
		&& addgroup -S "$USER" \
		&& adduser -S "$USER" -G "$USER" \
		&& cp /usr/share/zoneinfo/$TIME_ZONE /etc/localtime \
		&& printf %s "$TIME_ZONE" > /etc/timezone \
		&& goredo -symlinks
USER "$USER"
WORKDIR /home/"$USER"
COPY \
	--chown="$USER":"$USER" \
	. .
CMD \
	[ "redo", "-j=10", "-x", "test" ]
