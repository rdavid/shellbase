FROM golang:1.19.1-alpine AS goredoer
LABEL maintainer="David Rabkin <david@rabkin.co.il>"
RUN \
	apk add --no-cache --update \
		zstd~=1.5.2 && \
	rm -rf /var/cache/apk/*
ENV \
	SHA=98c1a8a189b33753fcd61e1dbdbe627dba3820621d2032a3856d89829eea08d9 \
	VER=1.27.1

# DL4006 is a bashism.
# Set the SHELL option -o pipefail before RUN with a pipe in.
# hadolint ignore=DL4006
RUN \
	wget --quiet \
		http://www.goredo.cypherpunks.ru/download/goredo-$VER.tar.zst && \
		printf '%s  %s' $SHA goredo-$VER.tar.zst | sha256sum -cs && \
	zstd --decompress < goredo-$VER.tar.zst | tar --extract --file -
WORKDIR /go/goredo-$VER/src
RUN go build -mod=vendor

FROM alpine:3.16.2
LABEL maintainer="David Rabkin <david@rabkin.co.il>"
ENV \
	TIME_ZONE=Asia/Jerusalem \
	USER=shellbase
COPY LICENSE /licenses/LICENSE
WORKDIR /bin
COPY --from=goredoer /go/goredo-*/src/goredo .
RUN \
	apk add --no-cache --update \
		bash~=5.1 \
		curl~=7.83 \
		dash~=0.5 \
		fish~=3.4 \
		loksh~=7.1 \
		tcsh~=6.24 \
		tzdata~=2022 \
		zsh~=5.8 \
		util-linux~=2 && \
	rm -rf /var/cache/apk/* && \
	addgroup -S "$USER" && \
	adduser -S "$USER" -G "$USER" && \
	cp /usr/share/zoneinfo/$TIME_ZONE /etc/localtime && \
	printf %s "$TIME_ZONE" > /etc/timezone && \
	./goredo -symlinks
USER "$USER"
WORKDIR /home/"$USER"
COPY \
	--chown="$USER":"$USER" \
	. .
CMD \
	[ "redo", "-j=10", "-x", "test" ]
