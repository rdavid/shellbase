FROM golang:1.18-alpine as builder
RUN \
	apk add --no-cache --update \
		zstd~=1.5 && \
	rm -rf /var/cache/apk/*
ENV \
	SHA=656e96d9f3efa45f035c2dd096fa91763854dbf1a09a37409c25ffc25cbc358f \
	VER=goredo-1.24.0

# hadolint ignore=DL4006
RUN \
	wget --quiet \
		http://www.goredo.cypherpunks.ru/download/$VER.tar.zst && \
		printf '%s  %s' $SHA $VER.tar.zst | sha256sum -cs && \
	zstd --decompress < $VER.tar.zst | tar --extract --file -
WORKDIR /go/goredo-1.24.0/src
RUN go build -mod=vendor

FROM registry.access.redhat.com/ubi8/ubi-minimal:8.5
LABEL maintainer="David Rabkin <david@rabkin.co.il>"
ENV \
	USER=shellbase
COPY LICENSE /licenses/LICENSE
WORKDIR /bin
COPY --from=builder /go/goredo-*/src/goredo .
RUN \
	microdnf update --assumeyes --disableplugin=subscription-manager && \
	rm --force --recursive /var/cache/yum && \
	microdnf install --assumeyes --disableplugin=subscription-manager \
		findutils-4.6.0 \
		shadow-utils-2:4.6-16.el8 && \
	microdnf clean all --disableplugin=subscription-manager && \
	useradd --create-home "$USER" && \
	./goredo -symlinks
USER "$USER"
WORKDIR /home/"$USER"
COPY \
	--chown="$USER":"$USER" \
	. .
CMD \
	[ "redo", "-j=10", "-x", "test" ]
